<% @page_title = "Resend unlock instructions" %>
<% add_breadcrumb @page_title %>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'bv-form col-md-6 col-md-offset-3' }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Resend unlock instructions", class: 'btn btn-danger btn-lg btn-block' %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>