<% @page_title = 'Registration' %>
<% add_breadcrumb 'Registration' %>

<div class="row">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'bv-form col-md-6 col-md-offset-3'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-group has-feedback">
    <%= f.input :email, required: true, autofocus: true %>
    <i class="fa fa-user form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <i class="fa fa-key form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <%= f.input :password_confirmation, required: true %>
    <i class="fa fa-key form-control-feedback"></i>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Register", class: 'btn btn-danger btn-lg btn-block' %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
</div>