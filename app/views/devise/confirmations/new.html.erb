<% @page_title = 'Resend confirmation instructions' %>
<% add_breadcrumb 'Resend confirmation instructions' %>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'bv-form col-md-6 col-md-offset-3' }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-group">
    <%= f.input :username, required: true, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Resend confirmation instructions", class: 'btn btn-danger btn-lg btn-block' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>