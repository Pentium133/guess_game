<% @page_title = 'Forgot your password?' %>
<% add_breadcrumb 'Forgot your password?' %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'bv-form col-md-6 col-md-offset-3'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :username, required: true, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-danger btn-lg btn-block'  %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
