<% @page_title = 'Log in' %>
<% add_breadcrumb 'Log in' %>


<div class="row">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'bv-form col-md-6 col-md-offset-3'}) do |f| %>
  <div class="form-group has-feedback">
    <%= f.input :login, required: false, autofocus: true, class: 'form-control' %>
    <i class="fa fa-user text-info form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <%= f.input :password, required: false, class: 'form-control' %>
    <i class="fa fa-key text-danger form-control-feedback"></i>
  </div>
  <div class="form-group">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-group no-margin">
    <%= f.button :submit, "Log in", class: 'btn btn-danger btn-lg btn-block'  %>
  </div>

  <div class="form-group">
    <%= render "devise/shared/links" %>
  </div>
<% end %>



</div>