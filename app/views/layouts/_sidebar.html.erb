<div class="current-user">
  <div class="user-avatar animated rubberBand">
    <img src="/img/user4.jpg" alt="Current User">
    <span class="busy"></span>
  </div>
  <div class="user-name">Welcome Mr. James</div>
  <ul class="user-links">
    <li>
      <a href="<%= destroy_user_session_path %>" title="Sign out">
        <i class="fa fa-sign-out text-danger"></i>
      </a>
    </li>
  </ul>
</div>

<div id='menu'>
  <ul>
    <li class="<%= active_if(action: 'dashboard') %>">
      <a href='<%= root_path %>'>
        <i class="fa fa-desktop"></i>
        <span>Dashboard</span>
        <%= current_page_tag_if(action: 'dashboard') %>
      </a>
    </li>
    <li class="<%= active_if(controller: 'team_seasons') %>">
      <a href='<%= team_seasons_path %>'>
        <i class="fa fa-users"></i>
        <span>Teams</span>
        <%= current_page_tag_if(controller: 'team_seasons') %>
      </a>
    </li>
  </ul>
</div>