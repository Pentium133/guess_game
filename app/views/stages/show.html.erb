<div class="row">
  <div class="col-lg-12 col-md-12 col-sx-12 col-sm-12">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#predict" data-toggle="tab" data-original-title="" title="">Predict</a>
      </li>
  <% if policy(@stage).calculate? %>
      <li class="">
        <a href="#result" data-toggle="tab" data-original-title="" title="">Result</a>
      </li>
  <% end %>
      <li class="">
        <a href="#scores" data-toggle="tab" data-original-title="" title="">Scores</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade active in" id="predict">
        <%= render 'predict_form' %>
      </div>
  <% if policy(@stage).calculate? %>
      <div class="tab-pane fade" id="result">
        <%= render 'result_form' %>
      </div>
  <% end %>
      <div class="tab-pane fade" id="scores">
        <%= render 'scores_table' %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar do %>
<%= render partial: 'overall_standing', locals: { overall: @overall, title: 'Overall standing after stage' } %>
<% end %>