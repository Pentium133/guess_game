<h2>Stage result</h2>

<%= form_for(race_stage_path(@stage.race_id, @stage), html: { novalidate: 'novalidate' }) do |f| %>

    <% @stage.stage_results.each do |result| %>
      <%= f.fields_for :stage_results, result do |rf| %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-1">
        <%= rf.text_field :place, class: 'form-control' %>
          </div>
          <div class="col-md-6">
        <%= rf.text_field :rider, class: 'form-control' %>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>

  <%= f.submit 'Save', class: 'btn btn-success' %>
<% end %>