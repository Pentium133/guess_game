<div class="row">
<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
  <div class="blog no-margin">
    <div class="blog-header">
      <h4 class="blog-title"><%= @race.name %></h4>
      <p class="date-time">
          <span class="day">
              <i class="fa fa-calendar"></i> <%= l @race.start_at %> â€” <%= l @race.end_at %>
          </span>
          <span class="day hidden-xs">
              <i class="fa fa-reorder"></i> <%= @race.stages.count %> stages
          </span>
      </p>
    </div>
    <div class="blog-body">
        <table class="table table-condensed table-bordered no-margin">
          <tbody>
          <% @race.stages.each do |stage| %>
          <tr>
            <td style="width: 35px;">
              <%= '<span class="badge badge-success">'.html_safe if stage.start_at.today? %>
              <%= stage.stage_number %>
              <%= '</span>'.html_safe if stage.start_at.today? %>
            </td>
            <td class="col-md-2">
              <%= l stage.start_at, format: :short %>
            </td>
            <td>
              <%= stage_type stage %>
              <%= link_to stage.name, race_stage_path(@race, stage) %>
              <%= predict_status stage %>
            </td>
            <td class="col-md-2">
              <%= stage.winner if stage.winner %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>
     </div>
  </div>
</div>

<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
<%= render partial: 'stages/overall_standing', locals: { overall: @overall, title: 'General overall standing' } %>

<%= render partial: 'stages/overall_standing', locals: { overall: @overall_spriners, title: 'Sprinters overall standing' } %>

<%= render partial: 'stages/overall_standing', locals: { overall: @overall_mountains, title: 'Mountains overall standing' } %>
</div>
</div>